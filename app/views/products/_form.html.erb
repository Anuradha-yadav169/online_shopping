<%= form_with(model: product, local: true) do |form| %>
    <div class="form-group">
    
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :product_name , class: "form-control"%>
      </div>
    
      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description, id: :product_description , class: "form-control"%>
      </div>
    
      <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price, id: :product_price, class: "form-control" %>
      </div>
      <div class="field">
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true, id: :product_images, class: "form-control" %>
    </div>
      # @product.images.attach(params[:images])

      <div class="actions">
        <%= form.submit 'Create Product' %>
      </div>
    </div>
    <% end %>
    